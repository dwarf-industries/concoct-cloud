@{
    var ProjectId = ViewData["ProjectId"];
    var defaultIteration = ViewData["DefaultIteration"] as int?;
    var defaultDashboard = ViewData["DefaultDashboard"] as int?;
}

<style>


    .GitIcon {
        background-image: url(../../../../wwwroot/Icons/Git_icon.svg);
    }
</style>

<div class="row" style="margin:0;">
    <div>
        <ul id="main-treeview">
        </ul>
    </div>
</div>


<script>
      var URL = location.href.replace(location.search, '');

    data = [

        {
            nodeId: '01', nodeText: 'Dashboard', iconCss: 'icon-th icon',expanded: true,
            nodeChild: [
                { nodeId: '01-01', nodeText: 'Home', iconCss: 'fas fa-home', link:'/Dashboard/ProjectDashboard?id=@ProjectId' },
                { nodeId: '01-02', nodeText: 'Project Details', iconCss: 'fas fa-project-diagram', link:'/Dashboard/ProjectDetails?projectId=@ProjectId&&dashboardId=@defaultDashboard' },
            ]
        },
        {
            nodeId: '02', nodeText: 'Backlog', iconCss: 'icon-code icon',expanded: true,
            nodeChild: [
                { nodeId: '02-01', nodeText: 'Work Items', iconCss: 'fas fa-toolbox', link: '/Backlogs/Index?projectId=@ProjectId&&boardId&&iteration=@defaultIteration' },
                { nodeId: '02-02', nodeText: 'Planning Boards', iconCss: 'PlanningBoards', link: '/Boards/Index?projectId=@ProjectId' },
                { nodeId: '02-03', nodeText: 'Backlog', iconCss: 'fas fa-list', link: '/Boards/ProjectBacklog?projectId=@ProjectId&&workItemType=5&&iteration=@defaultIteration' },
                { nodeId: '02-04', nodeText: 'Sprints', iconCss: 'fas fa-pager', link: '/Boards/Sprints?projectId=@ProjectId&&workItemType=7&&iteration=@defaultIteration&&person=0' },
                { nodeId: '02-05', nodeText: 'View Changelogs', iconCss: 'fab fa-phoenix-framework', link: '/Changelog/ViewChangelogs?projectId=@ProjectId' },
                { nodeId: '02-06', nodeText: 'Queries', iconCss: 'fas fa-tag', link: '/Widget/Queries?projectId=@ProjectId' },

            ]
        },
        {
            nodeId: '03', nodeText: 'Repos', iconCss: 'fab fa-git-alt',expanded: true,
            nodeChild: [
                { nodeId: '03-01', nodeText: 'Files', iconCss: 'far fa-file-code', link:'/Repositories/Index?id=@ProjectId' },
                { nodeId: '03-02', nodeText: 'Commits', iconCss: 'fas fa-train', link: '/Repositories/Commits?projectId=@ProjectId' },
                { nodeId: '03-03', nodeText: 'Pushes', iconCss: 'fas fa-upload', link: '/Repositories/Index?projectId=@ProjectId' },
                { nodeId: '03-04', nodeText: 'Branches', iconCss: 'fas fa-code-branch', link: '/Repositories/Index?projectId=@ProjectId' },
                { nodeId: '03-05', nodeText: 'Tags', iconCss: 'fas fa-tags', link: '/Repositories/Tags?projectId=@ProjectId' },
                { nodeId: '03-06', nodeText: 'Pull Requests', iconCss: 'fas fa-smog', link: '/Repositories/PullRequests?projectId=@ProjectId' },

            ]  
        },
         {
            nodeId: '04', nodeText: 'Administration', iconCss: 'fas fa-user-cog',expanded: true,
            nodeChild: [
                { nodeId: '04-01', nodeText: 'Manage Accounts', iconCss: 'fas fa-user-shield', link:'/Dashboard/ManageAccounts?id=@ProjectId' },
                { nodeId: '04-02', nodeText: 'Generate Changelog', iconCss: 'fab fa-pied-piper-square', link:'/Dashboard/ChangelogGenerator?projectId=@ProjectId' },
                { nodeId: '04-03', nodeText: 'API Key Integations', iconCss: 'fab fa-keycdn', link:'/ApiKeySettings/ProjectApiKeys?projectId=@ProjectId' },
                { nodeId: '04-04', nodeText: 'Documentation', iconCss: 'fas fa-book', link:'/Documentation/Index?Id=@ProjectId' },
                { nodeId: '05-05', nodeText: 'Survey Management', iconCss: 'fas fa-thumbtack', link:'/Survey/Index?projectId=@ProjectId' },
            ]
        },


    ];

    // TreeView  initialization
    var mainTreeView= new ej.navigations.TreeView({
        fields:
        {
            dataSource: data,
            id: 'nodeId',
            text: 'nodeText',
            child: 'nodeChild'
        }
        ,nodeSelected: LinkSelected,
        expandOn: 'Click',
     });

    mainTreeView.appendTo('#main-treeview');


    function LinkSelected(args)
    {

        data.forEach(element =>
        {

            element.nodeChild.forEach(child =>
            {

                if(child.nodeId === args.nodeData.id)
                {

                    window.location.href = child.link;
                }
            });
        });


    }

</script>